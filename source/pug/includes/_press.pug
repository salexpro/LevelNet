mixin press
    a.press_item(href="#")
        img(src="//placehold.it/200x80/2d2b2d?text=press", alt="")
section#press.press(data-magellan-target="press")
    .row.column
        h2 Press
        p.press_descr
            | Learn more about LevelNet from over 40 publications in press and social media
        .press_items
            - var j = 0;
            while j < 20
                +press
                - j++
            .press_hidden.hide
                - var j = 0;
                while j < 5
                    +press
                    - j++
        button.button.hollow.short.icon(data-toggler="press_hidden" data-show-label="View all" data-hide-label="Hide")
            span View all
            i.icon.icon--arrow
    +hexagon(1)