#method.reveal.reveal_method(data-reveal data-animation-in="fade-in" data-animation-out="fade-out")
    h3.reveal_header.reveal_method_header
        .reveal_header_hex
            span ?
        | Payments Method Times and Speeds
    table.reveal_method_table
        tr
            th Payment method
            th Confirmations
            th Speed
        tr
            td Ether
            td 6
            td 2 min
        tr
            td Bitcoin
            td 2
            td 30 min
        tr
            td Litecoin
            td 6
            td 2 min
        tr
            td BitcoinCash
            td 2
            td 30 min
        tr
            td USD/fiat
            td
                | wire
                br
                | (by StartEngine)
            td 1-2 days

    button.close-button(aria-label='Close', type='button', data-close)
        span(aria-hidden='true') ×

#startengine.reveal.reveal_startengine(data-reveal data-animation-in="fade-in" data-animation-out="fade-out")
    h2.reveal_header.reveal_startengine_header
        | Buy LVL tokens on StartEngine
    img(src="./img/logo_engine.png", alt="SmartEngine")
    ul.menu.vertical.reveal_startengine_list
        li
            h4 Leading crowdfunding network security
        li
            h4 Pay with VISA in USD
        li
            h4 Special prices for LVL buyers
    a.button.short.primary.spaced(href="https://www.startengine.com/levelnet" target="_blank")
        | BUY TOKENS
    button.close-button(aria-label='Close', type='button', data-close)
        span(aria-hidden='true') ×

#thank.reveal.reveal_success(data-reveal data-animation-in="fade-in" data-animation-out="fade-out")
    h2.reveal_header
        | Thank you for purchase!
    p.reveal_descr.reveal_descr--bold
        | 20LVL sent to your wallet
    .reveal_success_content
        img(src="./img/icons/appreciations.svg", alt="Thank you")
        a.button.short.primary.spaced(href="./profile_purchase.html")
            | CHECK WALLET
    button.close-button(aria-label='Close', type='button', data-close)
        span(aria-hidden='true') ×

#fail.reveal.reveal_fail(data-reveal data-animation-in="fade-in" data-animation-out="fade-out")
    h3.reveal_header.reveal_fail_header
        | Sorry, this Promo-Code no longer works
    button.button.short.primary.spaced
        | GET HELP
    button.close-button(aria-label='Close', type='button', data-close)
        span(aria-hidden='true') ×

#confirm.reveal.reveal_password(data-reveal data-animation-in="fade-in" data-animation-out="fade-out")
    h3.reveal_header
        | Confirm changes with your password
    form(action="confirm")
        .profile_settings_info_item.sign_up_form_pass
            input(type="password" name="password" placeholder="Your password" required)
            span.all-seeing_eye.is_hidden
                i.material-icons remove_red_eye
        button.button.short.primary.spaced
            | CONFIRM
    button.close-button(aria-label='Close', type='button', data-close)
        span(aria-hidden='true') ×

#change.reveal.reveal_password(data-reveal data-animation-in="fade-in" data-animation-out="fade-out")
    h3.reveal_header
        | Confirm password change
    form(action="change")
        .profile_settings_info_item.sign_up_form_pass
            input(type="password" name="password" placeholder="Old password" required)
            span.all-seeing_eye.is_hidden
                i.material-icons remove_red_eye
        .profile_settings_info_item.sign_up_form_pass
            input(type="password" name="password" placeholder="New password" required)
            span.all-seeing_eye.is_hidden
                i.material-icons remove_red_eye
        button.button.short.primary.spaced
            | CONFIRM
    button.close-button(aria-label='Close', type='button', data-close)
        span(aria-hidden='true') ×